<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Target Name="MakeChromiumExecutable" AfterTargets="Build;Publish" Condition="'$(OS)' != 'Windows_NT'">
    <Exec Command="chmod +x &quot;$(TargetDir)runtimes/linux-x64/native/chrome-headless-shell&quot;" IgnoreExitCode="true" Condition="Exists('$(TargetDir)runtimes/linux-x64/native/chrome-headless-shell')" />
    <Exec Command="chmod +x &quot;$(TargetDir)chrome-headless-shell&quot;" IgnoreExitCode="true" Condition="Exists('$(TargetDir)chrome-headless-shell')" />
  </Target>
</Project>
